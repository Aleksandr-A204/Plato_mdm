{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      // "vue3-toastify/global"
    ],
    "target": "esnext",
    "module": "esnext",
    // использование более строгого вывода типов для свойств данных в this
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src//.ts",
    "src//.d.ts",
    "src/**/*.tsx",
    "src//.vue"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}